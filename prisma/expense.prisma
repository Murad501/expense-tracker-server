model Expense {
    id          Int      @id @default(autoincrement())
    title       String
    amount String
    category    Category
    type        Type
    note        String?
    isLarge     Boolean  @default(false)
    userId      Int
    user        User     @relation(fields: [userId], references: [id])
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
}

enum Category {
    FOOD
    TRANSPORTATION
    UTILITIES
    ENTERTAINMENT
    HEALTHCARE
    EDUCATION
    PERSONAL_CARE
    MISCELLANEOUS
}

enum Type {
    INCOME
    EXPENSE
}